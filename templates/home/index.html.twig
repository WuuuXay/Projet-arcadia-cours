  </div>

  <script>
    const currentDate = new Date();
    let selectedDate = currentDate;
    let currentMonth = currentDate.getMonth();
    let currentYear = currentDate.getFullYear();

    const monthNames = [
      "Janvier", "F√©vrier", "Mars", "Avril", "Mai", "Juin", 
      "Juillet", "Ao√ªt", "Septembre", "Octobre", "Novembre", "D√©cembre"
    ];

    const globalEvents = [
      "Visite guid√©e de la savane", 
      "Rencontre avec les lions", 
      "Atelier √©co-responsabilit√©", 
      "Observation des oiseaux rares", 
      "Spectacle de dauphins", 
      "Pique-nique au zoo"
    ];

    function renderCalendar() {
  const daysInMonth = new Date(currentYear, currentMonth + 1, 0).getDate();
  const firstDay = new Date(currentYear, currentMonth, 1).getDay();
  const calendarDays = document.getElementById("calendar-days");
  const monthLabel = document.getElementById("current-month");

  monthLabel.innerText = `${monthNames[currentMonth]} ${currentYear}`;
  calendarDays.innerHTML = "";

  // Ajuster le d√©calage pour que le lundi soit le premier jour de la semaine
  const offset = (firstDay === 0) ? 6 : firstDay - 1; // Si c'est dimanche (0), d√©calage de 6, sinon d√©calage de firstDay - 1

  // Ajouter des cases vides pour les jours avant le premier du mois
  for (let i = 0; i < offset; i++) {
    const emptyDay = document.createElement("div");
    calendarDays.appendChild(emptyDay);
  }

  // Cr√©er les cases pour chaque jour du mois
  for (let day = 1; day <= daysInMonth; day++) {
    const dayDiv = document.createElement("div");
    const dayDate = new Date(currentYear, currentMonth, day);

    const isPast = dayDate < currentDate;
    const isToday = dayDate.toDateString() === currentDate.toDateString();
    const isSelected = dayDate.toDateString() === selectedDate.toDateString();
    const isClosed = dayDate.getDay() === 1 || 
                     (dayDate.getMonth() === 11 && dayDate.getDate() === 25) || 
                     (dayDate.getMonth() === 0 && dayDate.getDate() === 1);

    dayDiv.classList.add("day");
    if (isPast) dayDiv.classList.add("past");
    if (isToday) dayDiv.classList.add("today");
    if (isSelected) dayDiv.classList.add("selected");
    if (isClosed) dayDiv.classList.add("closed");
    else dayDiv.classList.add("open");

    dayDiv.textContent = day;
    dayDiv.addEventListener("click", () => selectDate(dayDate));

    calendarDays.appendChild(dayDiv);
  }
}

    // Fonction pour s√©lectionner une date
    function selectDate(date) {
      selectedDate = date;
      renderCalendar();
      updateSelectedDate();
      showEvents();
    }

    // Met √† jour la date s√©lectionn√©e dans l'interface
    function updateSelectedDate() {
      const selectedDateLabel = document.getElementById("selected-date");
      selectedDateLabel.innerText = `Date s√©lectionn√©e: ${selectedDate.toLocaleDateString('fr-FR')}`;
    }

    // Affiche les √©v√©nements associ√©s √† la date s√©lectionn√©e
    function showEvents() {
      const eventList = document.getElementById("event-list");

      eventList.innerHTML = "";
      globalEvents.forEach(event => {
        const eventItem = document.createElement("li");
        eventItem.classList.add("event-item");
        eventItem.textContent = event;
        eventList.appendChild(eventItem);
      });
    }

    // Navigation entre les mois
    document.getElementById("prev-month").addEventListener("click", () => {
      currentMonth = (currentMonth === 0) ? 11 : currentMonth - 1;
      if (currentMonth === 11) currentYear--;
      renderCalendar();
    });

    document.getElementById("next-month").addEventListener("click", () => {
      currentMonth = (currentMonth === 11) ? 0 : currentMonth + 1;
      if (currentMonth === 0) currentYear++;
      renderCalendar();
    });

    renderCalendar();
    updateSelectedDate();
  </script>
