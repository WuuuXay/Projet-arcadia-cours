<script>
    const enclos = {
        singe: [
            { nom: "Wukong", image: "https://images.pexels.com/photos/767197/pexels-photo-767197.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1", sante: "Bonne", alimentation: "Fruits, graines, insectes, petits vert√©br√©s", race: "Cebus capucinus" },
            { nom: "Maokai", image: "https://images.pexels.com/photos/25929086/pexels-photo-25929086/free-photo-of-paresseux-accroche-a-un-arbre.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1", sante: "Excellente", alimentation: "Feuilles, bourgeons, √©corce", race: "Bradypus variegatus" }
        ],
        caiman: [
            { nom: "Renekton", image: "https://images.pexels.com/photos/18138212/pexels-photo-18138212/free-photo-of-rochers-cailloux-pierres-mentir.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1", sante: "Bonne", alimentation: "Poissons, amphibiens, petits mammif√®res, oiseaux", race: "Caiman crocodilus" },
            { nom: "Fiddlestick", image: "https://images.pexels.com/photos/10796559/pexels-photo-10796559.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1", sante: "Tr√®s Bonne", alimentation: "Plantes aquatiques, fruits, insectes, petits poissons", race: "Podocnemis unifilis" }
        ],
        jaguar: [
            { nom: "Nidalee", image: "https://images.pexels.com/photos/235674/pexels-photo-235674.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1", sante: "Bonne", alimentation: "Mammif√®res, oiseaux, poissons, reptiles", race: "Panthera onca" },
            { nom: "Cassiopeia", image: "https://images.pexels.com/photos/29378239/pexels-photo-29378239/free-photo-of-gros-plan-d-un-boa-constrictor-dans-un-feuillage-luxuriant.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1", sante: "Excellente", alimentation: "Petits mammif√®res, oiseaux, l√©zards", race: "Boa constrictor" }
        ]
    };

    function openModal(zone) {
        document.getElementById('modal').classList.remove('hidden');
        document.querySelector('.modal-enter').classList.add('modal-enter-active');
        document.getElementById('modal-title').innerText = "Animaux de l'enclos des " + zone.charAt(0).toUpperCase() + zone.slice(1);

        let content = "";
        enclos[zone].forEach(animal => {
            content += `
                <div class="bg-gray-100 p-4 rounded-lg shadow-md">
                    <img src="${animal.image}" alt="${animal.nom}" class="w-full h-40 object-cover rounded-lg">
                    <h3 class="text-xl font-bold mt-4">${animal.nom}</h3>
                    <p><strong>Sant√©:</strong> ${animal.sante}</p>
                    <p><strong>Alimentation:</strong> ${animal.alimentation}</p>
                    <p><strong>Race:</strong> ${animal.race}</p>
                </div>
            `;
        });

        document.getElementById('modal-content').innerHTML = content;
    }

    function closeModal() {
        document.querySelector('.modal-enter').classList.remove('modal-enter-active');
        setTimeout(() => {
            document.getElementById('modal').classList.add('hidden');
        }, 300);
    }

    // Charger les donn√©es depuis localStorage pour synchroniser avec l'espace v√©t√©rinaire
function chargerAnimauxDepuisLocalStorage() {
    const animauxStockes = localStorage.getItem("zooAnimals");
    if (animauxStockes) {
        enclos = JSON.parse(animauxStockes);
    }
}

// Charger les donn√©es au chargement de la page
document.addEventListener("DOMContentLoaded", chargerAnimauxDepuisLocalStorage);

</script>

