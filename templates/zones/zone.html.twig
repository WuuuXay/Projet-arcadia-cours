<h1 class="text-4xl font-bold mb-12 text-white">Enclos de {{ zone.nom }}</h1>
<div class="grid grid-cols-1 md:grid-cols-3 gap-8">
    {% for enclos in zone.enclos %}
        <div class="bg-green-600 p-6 rounded-lg shadow-lg">
            <h2 class="text-2xl font-bold mt-4 text-white">{{ enclos.nom }}</h2>
            <ul>
                {% for animal in enclos.animaux %}
                    <li class="text-white">{{ animal.nom }} - {{ animal.race }}</li>
                {% endfor %}
            </ul>
        </div>
    {% endfor %}
</div>
