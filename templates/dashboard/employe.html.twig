{% extends 'base.html.twig' %}

{% block title %}Dashboard Employ√©{% endblock %}

{% block stylesheets %}
<style>
    /* Mode sombre */
    body.dark-mode {
        background-color: #121212;
        color: #e0e0e0;
    }
    .dark-mode .card {
        background-color: #1e1e1e;
        border-color: #444;
    }
    .dark-mode .btn {
        border-color: #666;
    }
    .dark-mode .btn-secondary {
        background-color: #444;
        color: #fff;
    }
    .dark-mode .list-group-item {
        background-color: #2a2a2a;
        color: #e0e0e0;
        border-color: #444;
    }
    /* Bouton de retour */
    .btn-back {
        display: flex;
        align-items: center;
        gap: 8px;
        background-color: #007bff;
        color: white;
        border: none;
        padding: 10px 15px;
        border-radius: 5px;
        text-decoration: none;
        font-weight: bold;
    }
    .btn-back:hover {
        background-color: #0056b3;
        color: white;
    }
    /* Toggle mode sombre */
    .dark-mode-toggle {
        position: absolute;
        top: 10px;
        right: 15px;
        cursor: pointer;
    }
</style>
{% endblock %}

{% block body %}
<div class="container position-relative">

    <!-- Toggle Mode Sombre -->
    <div class="form-check form-switch dark-mode-toggle">
        <input class="form-check-input" type="checkbox" id="darkModeSwitch">
        <label class="form-check-label" for="darkModeSwitch">üåô Mode sombre</label>
    </div>

    <!-- Bouton retour -->
    <a href="{{ path('app_home') }}" class="btn-back mb-3">
        ‚¨Ö Retour √† l'accueil
    </a>

    <h1 class="mb-4 text-center">üìã Dashboard Employ√©</h1>

    <!-- Section Validation des Avis -->
    <div class="card mb-4 shadow">
        <div class="card-header bg-primary text-white">‚úÖ Validation des Avis</div>
        <div class="card-body">
            {% if avis is defined and avis|length > 0 %}
                <ul class="list-group">
                    {% for avis in avis %}
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span>{{ avis.contenu }}</span>
                            <div>
                                <a href="{{ path('valider_avis', {id: avis.id}) }}" class="btn btn-success btn-sm">‚úÖ</a>
                                <a href="{{ path('invalider_avis', {id: avis.id}) }}" class="btn btn-danger btn-sm">‚ùå</a>
                            </div>
                        </li>
                    {% endfor %}
                </ul>
            {% else %}
                <p class="text-muted text-center">Aucun avis en attente de validation.</p>
            {% endif %}
        </div>
    </div>

    <!-- Section Gestion Alimentation des Animaux -->
    <div class="card shadow">
        <div class="card-header bg-success text-white">ü•ï Gestion de l'Alimentation</div>
        <div class="card-body">
            <form method="post" action="{{ path('ajouter_alimentation') }}">
                <div class="mb-3">
                    <label for="animal" class="form-label">S√©lectionner un animal</label>
                    <select class="form-select" id="animal" name="animal_id" required>
                        {% if animaux is defined and animaux|length > 0 %}
                            {% for animal in animaux %}
                                <option value="{{ animal.id }}">{{ animal.nom }} ({{ animal.race }})</option>
                            {% endfor %}
                        {% else %}
                            <option disabled>Aucun animal disponible</option>
                        {% endif %}
                    </select>
                </div>
                <div class="mb-3">
                    <label for="date" class="form-label">Date</label>
                    <input type="date" class="form-control" id="date" name="date" required>
                </div>
                <div class="mb-3">
                    <label for="heure" class="form-label">Heure</label>
                    <input type="time" class="form-control" id="heure" name="heure" required>
                </div>
                <div class="mb-3">
                    <label for="quantite" class="form-label">Quantit√© (g)</label>
                    <input type="number" class="form-control" id="quantite" name="quantite" min="1" required>
                </div>
                <button type="submit" class="btn btn-success w-100">‚úÖ Ajouter Consommation</button>
            </form>
        </div>
    </div>

</div>

<!-- Script Mode Sombre -->
<script>
    document.addEventListener("DOMContentLoaded", function() {
        const toggleSwitch = document.getElementById("darkModeSwitch");
        const body = document.body;

        // V√©rifier si le mode sombre est activ√© dans le localStorage
        if (localStorage.getItem("dark-mode") === "enabled") {
            body.classList.add("dark-mode");
            toggleSwitch.checked = true;
        }

        toggleSwitch.addEventListener("change", function() {
            if (toggleSwitch.checked) {
                body.classList.add("dark-mode");
                localStorage.setItem("dark-mode", "enabled");
            } else {
                body.classList.remove("dark-mode");
                localStorage.setItem("dark-mode", "disabled");
            }
        });
    });
</script>

{% endblock %}
